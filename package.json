{
    "name": "sync-2upra",
    "version": "1.0.2",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --publish always",
        "dev": "nodemon --exec \"electron .\" --watch src"
    },
    "keywords": [
        "sync",
        "2upra",
        "nodejs"
    ],
    "author": "1ndoryu@2upra.com",
    "license": "MIT",
    "description": "Sync 2upra",
    "dependencies": {
        "axios": "^1.7.7",
        "electron-log": "^5.2.3",
        "electron-store": "^10.0.0",
        "electron-updater": "^6.3.9",
        "express": "^4.21.1",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "electron": "^33.2.0",
        "electron-builder": "^24.12.0",
        "nodemon": "^3.1.9"
    },
    "build": {
        "appId": "com.2upra.sync",
        "productName": "Sync 2upra",
        "copyright": "Copyright Â© 2024 2upra",
        "directories": {
            "output": "release/"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.icns"
        },
        "linux": {
            "target": "deb",
            "icon": "build/icon.png"
        },
        "publish": {
            "provider": "github",
            "owner": "1ndoryu",
            "repo": "sync2upra",
            "releaseType": "release"
        }
    }
}
